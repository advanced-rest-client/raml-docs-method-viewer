#%RAML 1.0
title: My API with Types
mediaType: application/json
types:
  Org:
    type: object
    properties:
      onCall: Alertable
      Head: Manager
  Person:
    type: object
    properties:
      firstname: string
      lastname: string
      title?: string
      kind: string
  Phone:
    type: string
    pattern: "^[0-9|-]+$" # defines pattern for the content of type `Phone`
  Manager:
    type: Person
    properties:
      reports: Person[]
      phone:  Phone
  Admin:
    type: Person
    properties:
      clearanceLevel:
        enum: [ low, high ]
  AlertableAdmin:
    type: Admin
    properties:
      phone: Phone
  Alertable: Manager | AlertableAdmin
traits:
  visibility:
    queryParameters:
      visibility:
        type: string
        required: false
        description: |
          The visibility of the property.
          The visibility of the new file. This parameter is only relevant when convert=false.

          Acceptable values are:
          - **"DEFAULT"**: The visibility of the new file is determined by the user's default visibility/sharing policies. (default)
          - **"PRIVATE"**: The new file will be visible to only the owner.

          The visibility of the new file. This parameter is only relevant when the source is not a native Google Doc and convert=false.

          Acceptable values are:
          - **DEFAULT"**: The visibility of the new file is determined by the user's default visibility/sharing policies. (default)
          - **"PRIVATE"**: The new file will be visible to only the owner.

/{orgId}:
  uriParameters:
    orgId:
      type: string
  get:
    is: [visibility]
    queryParameters:
      test: string
    responses:
      200:
        body:
          application/json:
            type: Org # reference to global type definition
            example:
              onCall:
                firstname: nico
                lastname: ark
                kind: admin
                clearanceLevel: low
                phone: "12321"
              Head:
                firstname: nico
                lastname: ark
                kind: manager
                reports:
                  -
                    firstname: nico
                    lastname: ark
                    kind: admin
                phone: "123-23"
